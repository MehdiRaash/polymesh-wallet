{
  "extends": "@polkadot/dev/config/tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "noPropertyAccessFromIndexSignature": false,
    "paths": {
      "@polymeshassociation/extension": ["extension/src"],
      "@polymeshassociation/extension/*": ["extension/src/*"],
      "@polymeshassociation/extension-ui": ["ui/src"],
      "@polymeshassociation/extension-ui/*": ["ui/src/*"],
      "@polymeshassociation/extension-core": ["core/src"],
      "@polymeshassociation/extension-core/*": ["core/src/*"]
    },
    "verbatimModuleSyntax": false
  }
}
